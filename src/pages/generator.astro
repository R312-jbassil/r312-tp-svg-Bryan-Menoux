---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex flex-col gap-4 bg-base-200 min-h-screen p-4">
    <div class="flex flex-col lg:flex-row flex-1 gap-4">
      <div
        class="flex-1 bg-base-100 rounded-lg p-4 flex items-center justify-center border-2 border-violet-400"
      >
      </div>
      <div
        class="flex-1 bg-base-100 rounded-lg p-0 overflow-hidden border-2 border-violet-400"
      >
        <div class="mockup-window h-full"></div>
      </div>
    </div>
    <div
      class="flex items-center gap-2 bg-base-100 rounded-lg p-2 border-2 border-violet-400"
    >
      <input
        type="text"
        placeholder="Decrivez votre SVG..."
        class="input input-bordered flex-1"
      />
      <button class="btn btn-primary">Generer</button>
    </div>
  </div>
</Layout>
